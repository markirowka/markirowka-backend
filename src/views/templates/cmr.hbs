        <link rel="stylesheet" href="">
        <style>
            body{
                font-family: "DejaVu Sans";
                letter-spacing: -0.3px;
                font-size:5px;
            }
            table {
              width: 100%;
            }
            table, th, td, tr{
                border-collapse: collapse;
                vertical-align: top;
                border:1px solid black;
            }
            .cmrBody{
                width:700px;
                height:842px;
            }
            .num{
                font-size: 14px;
                float:left;
                padding-right:10px;
            }
            .bigNum{
                font-size: 18px;
                float:left;
                margin:10px;
            }
            .name {
                font-size: 8px;
            }
            .tableInside table{
                width:100%;
                border-collapse:collapse;
                border:1px solid black;
            }
            .tableInside tr{

            }
            .tableInside td{

            }
            hr{
                border: 0;
                height: 1px;
                background: black;
            }
            .cell21{
                font-size:6px;
                line-height:4px;
                float:left;
            }
            p{
                margin:0px;
                padding:0px;
            }
            .watermark {
                position: fixed;
                top: 396px;
                left: 175px;
                z-index: -1;
            }
            .filledCell {
                font-size:8px;
                border:none;
            }
            .cellToFill {
                min-height: 35px;
                border-left: none;
                border-right: none;
            }
            .senderSign {
                position: fixed;
                top: 750px;
                left: 100px;
                z-index: 3;
            }
            .specifyInfo td {
                font-size: 8px;
            }
