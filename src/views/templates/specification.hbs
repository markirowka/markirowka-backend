            background: #FFF;
        }
        h1, h2 {
            text-align: center;
            font-size: 14px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid black;
            padding: 5px;
            text-align: left;
        }
        .footer {
            position: absolute;
            bottom: 20px;
            width: calc(100% - 20mm);
            text-align: right;
        }
        .footer p {
            margin: 5px 0;
        }

        .upColontitle {
            position: absolute;
            top: 10px;
            right: 50px;
        }

        .upColontitle p{
