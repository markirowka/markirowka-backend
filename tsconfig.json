{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "Node",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./types"] 
  },
  "include": ["src/**/*.ts", "src/**/*.hbs"],
}